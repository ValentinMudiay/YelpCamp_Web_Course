    <% layout('layouts/boilerplate') %>

    <div class="row">
        <a href="/campgrounds/<%=foundCampground._id%>"> Cancel Edit </a> 

        <h1 class="text-center"> Edit Campground: <%=foundCampground.title %> </h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=foundCampground._id%>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data"> 
                <div class="mb-3">
                    <label class="form-label" for="title">Campground title</label>   
                    <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Campground Title" value="<%=foundCampground.title%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location </label>
                    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Campground location" value="<%=foundCampground.location%>" required >
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>


                <div class="mb-3">
                    <label class="form-label" for="price">Price </label>
                    
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="text" name="campground[price]" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" value="<%=foundCampground.price%>" required >
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description  </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="Campground description" required ><%=foundCampground.description%> </textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>


                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Add Images </label>
                    <input class="form-control" type="text" name="campground[image]" id="image" placeholder="Campground image" value="<%=foundCampground.image%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div> -->
                <div class="mb-3">
                    <label for="">Upload Image</label>
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Add more image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                    <!-- <input type="file" name="image" id="image" multiple> -->
                </div>

                <div class="mb-3">
                    <% foundCampground.image.forEach(function(img, i) {  %> 
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete</label>
                    <% }) %> 
                    
                </div>

                <div class="mb-3">
                    <button class="btn-success" type="submit">Edit Campground</button>
                </div>    
                
                <a href="/campgrounds/<%=foundCampground._id%>"> Back to campground </a> 
            </form>            
        </div>
    
